<!--Notes Modal-->
<!--article._id-->
<div class="modal fade modalNote" id="noteModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Notes for {{this.title}}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                {{#if this.notes}}
                    {{#each this.notes}}
                        <div class="panel panel-default">
                            <div class="panel-body modal-notes">
                                <div class="modal-text">
                                    <h4>{{this.title}}</h4>
                                    <p>{{this.body}}</p>
                                </div>
                                <button type="button" class="btn btn-danger" id="deletenote" data-note-id={{this._id}}>X</button>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>No notes for this article yet.</h4>
                        </div>
                    </div>
                {{/if}}
                <div id="noteText{{this._id}}" class="form-group">
                    <textarea id="titleinput{{this._id}}" class="form-control" rows="1" placeholder="Enter a Title"></textarea>
                    <textarea id="bodyinput{{this._id}}" class="form-control" rows="4" placeholder="Enter Note"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="savenote" data-id={{this._id}}>Save Note</button>
            </div>
        </div>
    </div>
</div>